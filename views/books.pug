extends layout

block main 
    if header
        h1= header
    else 
        h1 Books
    p: a(href="/books/new" class="button" class="button") Create New Book
    p Filters   
        a(href="/all_books") All 
        | |
        a(href="/overdue_books")  Overdue 
        | |
        a(href="/checked_books")  Checked Out
    table
        thead
            tr
                th Title
                th Author
                th Genre
                th Year Released
        tbody
            each book in books
                tr
                    td: a(href=`/book_detail/${book.id}`) #{book.title}
                    td= book.author
                    td= book.genre
                    td= book.first_published

            